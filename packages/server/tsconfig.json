{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@shared/*": ["../shared/src/*"]
    },
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "rootDir": "src",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
    ]
  }
}
